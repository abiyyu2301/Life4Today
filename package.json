{
    "name": "life4today-app",
    "version": "1.0.0",
    "description": "Photo collage game where players upload photos based on daily life topics",
    "scripts": {
      "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
      "server:dev": "nodemon server.ts",
      "client:dev": "cd client && npm start",
      "build": "npm run server:build && npm run client:build",
      "server:build": "tsc server.ts --outDir dist",
      "client:build": "cd client && npm run build",
      "start": "node dist/server.js",
      "setup": "npm install && cd client && npm install"
    },
    "dependencies": {
      "express": "^4.18.2",
      "cors": "^2.8.5",
      "multer": "^1.4.5-lts.1",
      "uuid": "^9.0.1"
    },
    "devDependencies": {
      "@types/express": "^4.17.21",
      "@types/cors": "^2.8.17",
      "@types/multer": "^1.4.11",
      "@types/uuid": "^9.0.7",
      "@types/node": "^20.10.5",
      "typescript": "^5.3.3",
      "nodemon": "^3.0.2",
      "ts-node": "^10.9.2",
      "concurrently": "^8.2.2"
    },
    "keywords": ["photo", "game", "collage", "social", "challenge"],
    "author": "Your Name",
    "license": "MIT"
  }